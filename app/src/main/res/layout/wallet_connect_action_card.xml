<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_card"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin_half"
    android:layout_marginTop="@dimen/activity_vertical_margin_extended"
    android:background="@drawable/rounded_blue"
    android:orientation="horizontal"
    tools:showIn="@layout/fragment_wallet_connect_approve">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin_half"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:tint="@color/theme_white"
        tools:src="@drawable/ic_identity" />
    <TextView
        android:id="@+id/action_text"
        style="@style/TextView.Standard.White"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_vertical"
        tools:text="@string/wallet_connect_proof_of_identity" />
</androidx.appcompat.widget.LinearLayoutCompat>
    