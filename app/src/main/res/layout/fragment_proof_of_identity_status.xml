<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Standard"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/proof_of_identity_prompt_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/status_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_big_logo_ok"
        android:layout_marginTop="@dimen/activity_vertical_margin_extended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/sub_title"
        style="@style/TextView.Small"
        android:layout_marginTop="@dimen/activity_vertical_margin_extended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_image"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        tools:text="@string/proof_of_identity_status_success" />

    <Button
        android:id="@+id/done"
        style="@style/Button.Standard.Intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:text="@string/proof_of_identity_status_done" />

</androidx.constraintlayout.widget.ConstraintLayout>