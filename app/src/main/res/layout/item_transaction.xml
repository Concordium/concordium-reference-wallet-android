<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/list_item">

    <ImageView
        android:id="@+id/alert_imageview"
        style="@style/Image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:src="@drawable/ic_status_problem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_textview"
        style="@style/TextView.ListItemHeader"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/subheader_textview"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/alert_imageview"
        app:layout_constraintRight_toLeftOf="@id/total_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginLeft="@dimen/list_item_horizontal_margin"
        tools:text="John Doe looooooooooooooooooooooo12345678" />

    <TextView
        android:id="@+id/subheader_textview"
        style="@style/TextView.ListItemSubHeader"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="30dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/alert_imageview"
        app:layout_constraintRight_toLeftOf="@id/amount_textview"
        app:layout_constraintTop_toBottomOf="@+id/title_textview"
        app:layout_goneMarginLeft="@dimen/list_item_horizontal_margin"
        tools:text="15:45 dadas dsfdsfdsfsdf"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/status_imageview"
        style="@style/Image"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_time"
        app:layout_constraintBottom_toBottomOf="@id/subheader_textview"
        app:layout_constraintLeft_toRightOf="@+id/subheader_textview"
        app:layout_constraintTop_toTopOf="@id/subheader_textview"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/total_textview"
        style="@style/TextView.ListItemHeader"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        app:layout_constraintBottom_toTopOf="@+id/cost_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="- Ǥ1000.65" />

    <TextView
        android:id="@+id/cost_textview"
        style="@style/TextView.ListItemSubHeader"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_textview"
        tools:text="Ǥ0.0059 Fee"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/amount_textview"
        style="@style/TextView.ListItemSubHeader"
        app:layout_constraintBottom_toBottomOf="@id/cost_textview"
        app:layout_constraintRight_toLeftOf="@id/cost_textview"
        app:layout_constraintTop_toTopOf="@id/cost_textview"
        tools:text="Ǥ1000000.30 + "
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/progress_imageview"
        style="@style/Image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:src="@drawable/ic_pending"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/lock_imageview"
        style="@style/Image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:src="@drawable/ic_lock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
