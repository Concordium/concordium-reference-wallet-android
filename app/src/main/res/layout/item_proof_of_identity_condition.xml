<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin_half">

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin_half"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="First Name: " />

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/text_grey"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/proof"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/title" />

    <TextView
        android:id="@+id/proof"
        style="@style/TextView.Small"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin_half"
        app:layout_constraintEnd_toStartOf="@id/mark"
        app:layout_constraintStart_toEndOf="@id/separator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nellie" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/identity_proof_icon_margin_small"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_half"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/proof"
        app:layout_constraintTop_toTopOf="@id/title"
        tools:src="@drawable/ic_ok"
        tools:tint="@color/text_green" />


</androidx.constraintlayout.widget.ConstraintLayout>