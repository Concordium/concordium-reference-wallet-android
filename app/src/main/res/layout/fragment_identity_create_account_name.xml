<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    style="@style/Layout.Root">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/app_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            style="@style/ScrollView.Standard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_vertical_margin_extended"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/confirm_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        style="@style/TextView.BlueHeader"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/create_identity_flow_top_margin"
                        android:gravity="center_horizontal"
                        android:text="@string/identity_create_account_name_header" />

                    <TextView
                        style="@style/TextView.Standard"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="left"
                        android:text="@string/identity_create_account_name_info" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/account_name_layout"
                        style="@style/Layout.TextInputLayout"
                        android:layout_marginTop="30dp"
                        android:hint="@string/identity_create_account_name_account_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/account_name_edittext"
                            style="@style/EditText.Name"
                            android:maxLength="35"
                            android:imeOptions="actionDone" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/confirm_button"
                    style="@style/Button.Standard"
                    android:layout_width="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                    android:text="@string/identity_create_account_name_confirm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>