<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_submitted"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_marginBottom="@dimen/activity_receipt_item_vertical_margin"
    android:layout_marginStart="@dimen/activity_content_margin"
    android:layout_marginEnd="@dimen/activity_content_margin"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    tools:showIn="@layout/activity_delegation_registration_confirmation">

    <ImageView
        style="@style/Image"
        android:layout_width="@dimen/logo_size_small"
        android:layout_height="@dimen/logo_size_small"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_logo_icon_pending" />

    <TextView
        style="@style/TextView.BlueHeader"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/activity_receipt_padding"
        android:text="@string/send_funds_confirmed_header" />
</LinearLayout>
