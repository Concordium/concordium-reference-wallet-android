<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/Layout.CardView.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/account_card_margin_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/account_card_margin_horizontal"
                android:layout_marginVertical="@dimen/account_card_margin_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/account_name"
                    style="@style/TextView.ListItemHeader"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="1"
                    tools:text="Savings " />

                <TextView
                    android:id="@+id/identity_name"
                    style="@style/TextView.ListItemHeader"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="@dimen/account_card_margin_horizontal"
                    android:maxWidth="100dp"
                    android:maxLines="1"
                    android:layout_gravity="end"
                    android:textColor="@color/redesign_off_primary"
                    android:gravity="end"
                    tools:text="Nellie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/account_card_margin_horizontal"
                android:layout_marginVertical="@dimen/account_card_margin_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.ListItemValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/accounts_overview_account_total" />

                <TextView
                    android:id="@+id/total"
                    style="@style/TextView.ListItemValue"
                    android:layout_gravity="end"
                    tools:text="123.2322" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/account_card_margin_horizontal"
                android:layout_marginVertical="@dimen/account_card_margin_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.ListItemValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accounts_overview_at_disposal" />

                <TextView
                    android:id="@+id/at_disposal"
                    style="@style/TextView.ListItemValue"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    tools:text="123.2322" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
