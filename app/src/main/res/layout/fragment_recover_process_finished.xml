<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Layout.Root">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pending_imageview"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_big_logo_ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/header_textview"
        style="@style/TextView.BlueHeader"
        android:text="@string/pass_phrase_recover_process_finished"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin_extended"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pending_imageview" />
    <TextView
        android:id="@+id/subtitle_textview"
        style="@style/TextView.Standard"
        android:text="@string/pass_phrase_recover_process_recovered"
        android:layout_marginTop="@dimen/activity_vertical_margin_extended"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_textview" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/identities_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_textview"
        android:orientation="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>
