<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/account_release_schedule_inner_list_padding_sides"
    android:paddingRight="@dimen/account_release_schedule_inner_list_padding_sides"
    android:paddingTop="@dimen/account_release_schedule_inner_list_padding_top_bottom"
    android:paddingBottom="@dimen/account_release_schedule_inner_list_padding_top_bottom"
    tools:background="@android:color/red"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Layout.CardView"
        android:layout_marginBottom="10dp"
        android:background="@color/theme_white">

        <TextView
            android:id="@+id/menu_item_update_baker_stake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_black"
            android:text="@string/update_baker_settings_menu_update_baker_stake"
            android:gravity="center"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Layout.CardView"
        android:layout_marginBottom="10dp"
        android:background="@color/theme_white">

        <TextView
            android:id="@+id/menu_item_update_pool_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_black"
            android:text="@string/update_baker_settings_menu_update_pool_settings"
            android:gravity="center"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Layout.CardView"
        android:layout_marginBottom="10dp"
        android:background="@color/theme_white">

        <TextView
            android:id="@+id/menu_item_update_baker_keys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_black"
            android:text="@string/update_baker_settings_menu_update_baker_keys"
            android:gravity="center"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Layout.CardView"
        android:background="@color/theme_white">

        <TextView
            android:id="@+id/menu_item_stop_baking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/redesign_negative_light"
            android:text="@string/update_baker_settings_menu_stop_baking"
            android:gravity="center"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:minHeight="?android:attr/listPreferredItemHeightSmall" />
    </androidx.cardview.widget.CardView>

</LinearLayout>